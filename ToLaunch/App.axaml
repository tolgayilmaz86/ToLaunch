<Application xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:themes="clr-namespace:Avalonia.Themes.Neumorphism;assembly=Avalonia.Themes.Neumorphism"
			 xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
			 x:Class="ToLaunch.App"
			 xmlns:local="using:ToLaunch"
			 RequestedThemeVariant="Light">

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Styles>
		<themes:NeumorphismTheme BaseTheme="Light" PrimaryColor="LightBlue" SecondaryColor="Lime" />
		<StyleInclude Source="avares://Material.Icons.Avalonia/MaterialIconStyles.axaml" />
	</Application.Styles>

	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="/Assets/ToLaunch.ico" ToolTipText="ToLaunch" Clicked="TrayIcon_Show_Click">
				<TrayIcon.Menu>
				<NativeMenu>
				<NativeMenuItem Header="Show" Click="TrayIcon_Show_Click"/>
				<NativeMenuItemSeparator/>
				<NativeMenuItem Header="Start All" Click="TrayIcon_StartAll_Click"/>
				<NativeMenuItem Header="Stop All" Click="TrayIcon_StopAll_Click"/>
				<NativeMenuItemSeparator/>
				<NativeMenuItem Header="Exit" Click="TrayIcon_Exit_Click"/>
				</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>