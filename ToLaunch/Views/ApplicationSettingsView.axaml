<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:ToLaunch.ViewModels"
			 x:Class="ToLaunch.Views.ApplicationSettingsView"
			 x:DataType="vm:ApplicationSettingsViewModel"
			 Width="600"
			 Background="#e0e0e0">

	<Design.DataContext>
		<vm:ApplicationSettingsViewModel/>
	</Design.DataContext>

	<Border CornerRadius="12" Padding="24" Margin="16">
		<Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*, *">
			<!-- Row 1, Col 1: Start with Windows -->
			<Border Grid.Row="0" Grid.Column="0" CornerRadius="8" Background="#d0d0d0" Padding="16" Margin="0,0,8,8">
				<StackPanel Spacing="8">
					<CheckBox IsChecked="{Binding StartWithWindows}"
							  Content="Start with Windows"
							  FontSize="14"
							  FontWeight="SemiBold"/>
					<TextBlock Text="Automatically start ToLaunch when Windows starts"
							   FontSize="12"
							   Foreground="#666"
							   Margin="28,0,0,0"
							   TextWrapping="Wrap"/>
				</StackPanel>
			</Border>

			<!-- Row 1, Col 2: Start Minimized -->
			<Border Grid.Row="0" Grid.Column="1" CornerRadius="8" Background="#d0d0d0" Padding="16" Margin="8,0,0,8">
				<StackPanel Spacing="8">
					<CheckBox IsChecked="{Binding StartMinimized}"
					Content="Start Minimized"
							  FontSize="14"
							  FontWeight="SemiBold"/>
					<TextBlock Text="Start ToLaunch minimized to system tray"
					FontSize="12"
					Foreground="#666"
					Margin="28,0,0,0"
					TextWrapping="Wrap"/>
				</StackPanel>
			</Border>

			<!-- Row 2, Col 1: Run as Administrator -->
			<Border Grid.Row="1" Grid.Column="0" CornerRadius="8" Background="#d0d0d0" Padding="16" Margin="0,0,8,8">
				<StackPanel Spacing="8">
					<CheckBox IsChecked="{Binding RunAsAdministrator}"
							  Content="Run as Administrator"
							  FontSize="14"
							  FontWeight="SemiBold"/>
					<TextBlock Text="Start ToLaunch with elevated privileges"
							   FontSize="12"
							   Foreground="#666"
							   Margin="28,0,0,0"
							   TextWrapping="Wrap"/>
				</StackPanel>
			</Border>

			<!-- Row 2, Col 2: Close to System Tray -->
			<Border Grid.Row="1" Grid.Column="1" CornerRadius="8" Background="#d0d0d0" Padding="16" Margin="8,0,0,8">
				<StackPanel Spacing="8">
					<CheckBox IsChecked="{Binding CloseToSystemTray}"
							  Content="Close to System Tray"
							  FontSize="14"
							  FontWeight="SemiBold"/>
					<TextBlock Text="Keep ToLaunch running in system tray when closing the window"
							   FontSize="12"
							   Foreground="#666"
							   Margin="28,0,0,0"
							   TextWrapping="Wrap"/>
				</StackPanel>
			</Border>

			<!-- Row 3, Col 1: Minimize to System Tray -->
			<Border Grid.Row="2" Grid.Column="0" CornerRadius="8" Background="#d0d0d0" Padding="16" Margin="0,0,8,0">
				<StackPanel Spacing="8">
					<CheckBox IsChecked="{Binding MinimizeToSystemTray}"
							  Content="Minimize to System Tray"
							  FontSize="14"
							  FontWeight="SemiBold"/>
					<TextBlock Text="Minimize ToLaunch to system tray instead of taskbar"
							   FontSize="12"
							   Foreground="#666"
							   Margin="28,0,0,0"
							   TextWrapping="Wrap"/>
				</StackPanel>
			</Border>

			<!-- Row 3, Col 2: Start Main Program with Start All -->
			<Border Grid.Row="2" Grid.Column="1" CornerRadius="8" Background="#d0d0d0" Padding="16" Margin="8,0,0,0">
				<StackPanel Spacing="8">
					<CheckBox IsChecked="{Binding StartMainProgramWithStartAll}"
							  FontSize="14"
							  FontWeight="SemiBold">
						<CheckBox.Content>
							<StackPanel Orientation="Vertical">
								<TextBlock Text="Start Main Program with" />
								<TextBlock Text="Start All" />
							</StackPanel>
						</CheckBox.Content>
					</CheckBox>
					<TextBlock Text="Clicking 'Start All', also launches the main program. Disable this if the main program is already running."
							   FontSize="12"
							   Foreground="#666"
							   Margin="28,0,0,0"
							   TextWrapping="Wrap"/>
				</StackPanel>
			</Border>
		</Grid>
	</Border>
</UserControl>